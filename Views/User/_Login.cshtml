@model LoginUser

<link rel="stylesheet" href="~/css/style.css">

<h3>Login</h3>

<form asp-controller = "User" asp-action = "Login" method = "POST">
    <div>
        <label asp-for = "LoginEmail"></label>
        <input asp-for = "LoginEmail">
        <span asp-validation-for = "LoginEmail" class = "validation"></span>
    </div>

    <div>
        <label asp-for = "LoginPassword"></label>
        <input asp-for = "LoginPassword">
        <span asp-validation-for = "LoginPassword" class = "validation"></span>
    </div>

    <button>Login</button>
</form>