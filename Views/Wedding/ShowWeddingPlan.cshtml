@model Wedding

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wedding Planner</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Plan Your Wedding</h1>
        <a asp-controller = "Wedding" asp-action = "Dashboard" class = "Logout">Dashboard</a>
        <form asp-controller = "User" asp-action = "Logout" method = "POST"><button class = "Logout">Logout</button></form>
    </div>
    <div class="wform">
        <form asp-controller = "Wedding" asp-action = "CreateWedding" method = "POST">
            <div>
                <label asp-for = "WedderOne"></label>
                <input asp-for = "WedderOne">
                <span asp-validation-for = "WedderOne" class = "validation"></span>
            </div>

            <div>
                <label asp-for = "WedderTwo"></label>
                <input asp-for = "WedderTwo">
                <span asp-validation-for = "WedderTwo" class = "validation"></span>
            </div>

            <div>
                <label asp-for = "Date"></label>
                <input asp-for = "Date">
                <span asp-validation-for = "Date" class = "validation"></span>
            </div>

            <div>
                <label asp-for = "Address"></label>
                <input asp-for = "Address">
                <span asp-validation-for = "Address" class = "validation"></span>
            </div>
            <button class = "btn">Create</button>
        </form>
    </div>
</body>
</html>